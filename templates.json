                            "spec": {
                                "containers": [
                                    {
                                        "name": "notebook",
                                        "image": "${APPLICATION_NAME}:latest",
                                        "ports": [
                                            {
                                                "containerPort": 8080,
                                                "protocol": "TCP"
                                            }
